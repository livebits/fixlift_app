<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/factor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/colorOnBackground"
        android:textSize="17dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/factor_item_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/factor_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/building_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="تعداد:"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/factor_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/factor_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/colorSecondary"
        android:layout_marginRight="10dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/factor_name"
        app:layout_constraintRight_toLeftOf="@id/building_address"/>

    <TextView
        android:id="@+id/factor_item_unit_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:text="قیمت واحد:"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/factor_name"
        app:layout_constraintRight_toLeftOf="@id/factor_item_number"/>

    <TextView
        android:id="@+id/factor_item_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/colorSecondary"
        android:layout_marginRight="10dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/factor_name"
        app:layout_constraintRight_toLeftOf="@id/factor_item_unit_price_title"/>

    <ImageView
        android:id="@+id/divider_first"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/factor_item_unit_price" />

</androidx.constraintlayout.widget.ConstraintLayout>