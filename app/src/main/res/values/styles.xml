<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorBackgroundFloating">@color/colorBackground</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="AppTheme.CircleButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">50pt</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="AppTheme.EditText.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeColor">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.EditText.Outline.dialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Chip" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/chipText</item>
        <item name="chipBackgroundColor">@color/colorPrimaryVeryLight</item>
    </style>

    <style name="chipText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="CardView2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:strokeColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:layout_marginRight">-10dp</item>
    </style>


</resources>
